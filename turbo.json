{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV"
  ],
  "globalDependencies": [
    ".env",
    ".env.*"
  ],
  "tasks": {
    "prepare": {
      "dependsOn": [
        "^prepare"
      ],
      "outputs": [
        "styled-system/**"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "^prepare"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env",
        ".env.*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        ".vercel/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "SLACK_ERROR_CHANNEL_WEBHOOK_URL"
      ]
    }
  }
}